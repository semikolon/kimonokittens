generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CoOwnedItem {
  id           String   @id @default(cuid())
  name         String
  description  String?
  purchaseDate DateTime
  value        Float
  owners       Tenant[] @relation("ItemOwners")
}

model ElectricityBill {
  id         String   @id @default(cuid())
  provider   String
  billDate   DateTime
  amount     Float
  billPeriod DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([billDate(sort: Desc)])
  @@index([provider, billPeriod(sort: Desc)])
}

model RentConfig {
  id           String   @id @default(cuid())
  key          String
  value        String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  period       DateTime @default(now())
  isProjection Boolean  @default(false)

  @@unique([key, period])
  @@index([key, period(sort: Desc)])
}

model RentLedger {
  id               String    @id
  tenantId         String
  period           DateTime
  amountDue        Float
  amountPaid       Float
  paymentDate      DateTime?
  createdAt        DateTime  @default(now())
  daysStayed       Float?
  roomAdjustment   Float?
  baseMonthlyRent  Float?
  calculationTitle String?
  calculationDate  DateTime?
  Tenant           Tenant    @relation(fields: [tenantId], references: [id])
}

model Tenant {
  id                String           @id
  facebookId        String?          @unique
  name              String
  email             String           @unique
  avatarUrl         String?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime
  roomAdjustment    Float?
  room              String?
  departureDate     DateTime?
  startDate         DateTime?
  personnummer      String?
  phone             String?
  baseRent          Decimal?         @db.Decimal(10, 2)
  deposit           Decimal?         @db.Decimal(10, 2)
  furnishingDeposit Decimal?         @db.Decimal(10, 2)
  status            String?          @default("active")
  phoneE164         String?
  paydayStartDay    Int              @default(25)
  smsOptOut         Boolean          @default(false)
  RentLedger        RentLedger[]
  SignedContract    SignedContract[]
  CoOwnedItem       CoOwnedItem[]    @relation("ItemOwners")
  TenantLead        TenantLead?
  RentReceipt       RentReceipt[]
  SmsEvent          SmsEvent[]

  @@index([phoneE164])
}

model TenantLead {
  id                  String    @id @default(cuid())
  name                String
  email               String?
  facebookId          String?
  phone               String?
  contactMethod       String // "email" or "facebook"
  moveInFlexibility   String // "immediate", "1month", "2months", "3months", "specific", "other"
  moveInExtra         String? // Date string or text description
  motivation          String?   @db.Text
  status              String    @default("pending_review") // pending_review, contacted, interview_scheduled, approved, rejected, converted
  adminNotes          String?   @db.Text
  source              String?   @default("web_form") // Track application source
  ipAddress           String
  userAgent           String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  convertedToTenantId String?   @unique
  convertedToTenant   Tenant?   @relation(fields: [convertedToTenantId], references: [id])

  @@index([status])
  @@index([createdAt(sort: Desc)])
  @@index([ipAddress, createdAt]) // For rate limiting queries
}

model SignedContract {
  id                     String                @id
  tenantId               String
  caseId                 String                @unique
  pdfUrl                 String
  status                 String                @default("pending")
  landlordSigned         Boolean               @default(false)
  tenantSigned           Boolean               @default(false)
  landlordSignedAt       DateTime?
  tenantSignedAt         DateTime?
  completedAt            DateTime?
  expiresAt              DateTime?
  createdAt              DateTime              @default(now())
  updatedAt              DateTime              @updatedAt
  landlordSigningUrl     String?
  tenantSigningUrl       String?
  testMode               Boolean               @default(false)
  generationStatus       String?               @default("pending")
  generationStartedAt    DateTime?
  generationCompletedAt  DateTime?
  generationFailedAt     DateTime?
  generationError        Json?
  validationStatus       String?               @default("pending")
  validationStartedAt    DateTime?
  validationCompletedAt  DateTime?
  validationFailedAt     DateTime?
  validationErrors       Json?
  emailDeliveryStatus    String?               @default("pending")
  landlordEmailDelivered Boolean?              @default(false)
  tenantEmailDelivered   Boolean?              @default(false)
  emailDeliveryFailedAt  DateTime?
  emailDeliveryError     String?
  ContractParticipant    ContractParticipant[]
  tenant                 Tenant                @relation(fields: [tenantId], references: [id])

  @@index([tenantId])
  @@index([status])
  @@index([generationStatus])
  @@index([validationStatus])
  @@index([emailDeliveryStatus])
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
model ContractParticipant {
  id                          String         @id
  contractId                  String
  participantId               String         @unique
  name                        String
  email                       String
  personalNumber              String
  role                        String         @default("signer")
  status                      String         @default("pending")
  signingUrl                  String?
  signedAt                    DateTime?
  emailDelivered              Boolean        @default(false)
  emailDeliveredAt            DateTime?
  emailDeliveryFailed         Boolean        @default(false)
  emailDeliveryError          String?
  identityEnforcementPassed   Boolean?
  identityEnforcementFailedAt DateTime?
  createdAt                   DateTime       @default(now())
  updatedAt                   DateTime
  SignedContract              SignedContract @relation(fields: [contractId], references: [id], onDelete: Cascade)

  @@index([contractId])
  @@index([personalNumber])
  @@index([status])
}

model BankTransaction {
  id           String        @id @default(cuid())
  externalId   String        @unique
  accountId    String
  bookedAt     DateTime
  amount       Decimal       @db.Decimal(12, 2)
  currency     String        @default("SEK")
  description  String
  counterparty String?
  rawJson      Json
  createdAt    DateTime      @default(now())
  RentReceipt  RentReceipt[]

  @@index([bookedAt(sort: Desc)])
  @@index([accountId, bookedAt(sort: Desc)])
}

model RentReceipt {
  id          String           @id @default(cuid())
  month       String
  tenantId    String
  amount      Decimal          @db.Decimal(12, 2)
  matchedTxId String?
  matchedVia  String
  paidAt      DateTime
  partial     Boolean          @default(false)
  createdAt   DateTime         @default(now())
  Tenant      Tenant           @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  Transaction BankTransaction? @relation(fields: [matchedTxId], references: [id], onDelete: SetNull)

  @@index([tenantId, month])
  @@index([paidAt(sort: Desc)])
  @@index([matchedTxId])
}

model SmsEvent {
  id         String    @id @default(cuid())
  tenantId   String?
  month      String?
  direction  String
  providerId String?
  body       String
  parts      Int?
  status     String?
  meta       Json?
  createdAt  DateTime  @default(now())
  Tenant     Tenant?   @relation(fields: [tenantId], references: [id], onDelete: SetNull)

  @@index([tenantId, month])
  @@index([direction, createdAt(sort: Desc)])
  @@index([providerId])
}
