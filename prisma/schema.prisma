generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id             String        @id @default(cuid())
  facebookId     String?       @unique
  name           String
  email          String        @unique
  avatarUrl      String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  roomAdjustment Float?
  departureDate  DateTime?
  startDate      DateTime?
  rentLedger     RentLedger[]
  coOwnedItems   CoOwnedItem[] @relation("ItemOwners")
}

model CoOwnedItem {
  id           String   @id @default(cuid())
  name         String
  description  String?
  purchaseDate DateTime
  value        Float
  owners       Tenant[] @relation("ItemOwners")
}

model RentLedger {
  id          String    @id @default(cuid())
  tenantId    String
  period      DateTime
  amountDue   Float
  amountPaid  Float
  paymentDate DateTime?
  createdAt   DateTime  @default(now())
  tenant      Tenant    @relation(fields: [tenantId], references: [id])
}

model RentConfig {
  id           String    @id @default(cuid())
  key          String
  value        String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  period       DateTime  @default(now())
  period_month DateTime? @db.Date

  @@unique([key, period_month], map: "rentconfig_key_period_month_uniq")
  @@index([key, period(sort: Desc)], map: "rentconfig_key_period_desc_idx")
}
